{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types",
    "esModuleInterop": true,
    "lib": ["es2015", "es2016.array.include"],
    "module": "commonjs",
    "outDir": "./compiled/",
    "strict": true,
    "strictNullChecks": true,
    "target": "es6",
    "noUnusedLocals": true
  },
  "include": ["./src/"],
  "exclude": ["**/test-utils", "node_modules", "**/*.spec.ts"],
  "compileOnSave": true
}
